        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{ISO8601}} %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{10}}{bright,yellow}: %msg%n%throwable" />
        </Console>
        <SplunkHttp
                name="splunkhttp"
                url="https://prd-p-86vfp.splunkcloud.com:8088"
                token="076ad06f-7050-4bc2-8925-fe5363a63d8b"
                index="spring_dev"
                type="raw"
                source="source"
                sourcetype="log4j"
                messageFormat="text"
                disableCertificateValidation="true">
